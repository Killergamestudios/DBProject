extends menu-layout

block content
  div.container
    form(action="/books/update", method="post")
      input(type="text", name="title", placeholder="Book Title")
      input(type="checkbox", name="new")
      select(name="publishers")
        option(value="Choose Your Destiny..." selected) Choose Your Destiny...
        option(value="Josephkhland") Josephkhland
        option(value="Panloul") Panloul
        option(value="Hulk") Hulk
      input(type="submit", value="Submit")
